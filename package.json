{
  "name": "mmseqs-app",
  "productName": "MMseqs2 App",
  "version": "0.0.0",
  "author": "Milot Mirdita <milot@mirdita.de>",
  "description": "Frontend for the MMseqs2 search server and app.",
  "repository": "https://github.com/soedinglab/MMseqs2-App",
  "license": "GPL-3.0-or-later",
  "main": "dist/main.js",
  "scripts": {
    "electron:deps": "make all",
    "electron:build": "npm run electron:deps && cross-env ELECTRON=1 node ./electron/build.js && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --x64 -mwl",
    "electron:dir": "npm run electron:deps && cross-env ELECTRON=1 node ./electron/build.js && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --x64 --dir",
    "electron:dev": "cross-env ELECTRON=1 node ./electron/dev-runner.js",
    "electron:pack": "npm run electron:main && cross-env ELECTRON=1 npm run frontend",
    "electron:main": "cross-env NODE_ENV=production webpack --progress --hide-modules --colors --config ./webpack.electron.config.js",
    "frontend": "cross-env NODE_ENV=production webpack --progress --hide-modules  --colors --config ./webpack.frontend.config.js",
    "frontend:watch": "cross-env NODE_ENV=production webpack --watch --progress --hide-modules  --colors --config ./webpack.frontend.config.js",
    "frontend:dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot --content-base dist/ --config ./webpack.frontend.config.js",
    "api": "raml2html --template docs/api/theme/index.nunjucks docs/api/api.raml > docs/api.html"
  },
  "configuration": {
    "apiEndpoint": "/"
  },
  "build": {
    "productName": "MMseqs2 Search",
    "appId": "com.mmseqs.app",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*"
    ],
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "resources/icons/icon.icns"
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "icon": "resources/icons/icon.icns"
    }
  },
  "devDependencies": {
    "app-root-dir": "^1.0.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-add-filehash": "^6.9.8",
    "babel-plugin-transform-imports": "^1.5.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "compression-webpack-plugin": "^1.1.12",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^3.0.0",
    "electron-builder": "^20.28.4",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "favicons-webpack-plugin": "^0.0.9",
    "file-loader": "^2.0.0",
    "find-free-port": "^2.0.0",
    "html-webpack-include-assets-plugin": "^1.0.5",
    "html-webpack-plugin": "^3.2.0",
    "icon-gen": "^1.2.3",
    "material-design-icons": "^3.0.1",
    "multispinner": "^0.2.1",
    "nunjucks": "^3.1.3",
    "raml2html": "^7.2.0",
    "style-loader": "^0.23.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "svg2png": "^4.1.1",
    "vue": "^2.5.17",
    "vue-loader": "^14.2.3",
    "vue-localstorage": "^0.6.2",
    "vue-resource": "^1.5.1",
    "vue-router": "^3.0.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "vuedraggable": "^2.16.0",
    "vuetify": "0.17.7",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.3",
    "webpack-hot-middleware": "^2.23.1",
    "webpack-subresource-integrity": "^1.0.4"
  }
}
