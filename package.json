{
  "name": "mmseqs-app",
  "productName": "MMseqs2 App",
  "version": "0.0.0",
  "author": "Milot Mirdita <milot@mirdita.de>",
  "description": "Frontend for the MMseqs2 search server and app.",
  "license": "GPL-3.0-or-later",
  "main" : "dist/main.js",
  "scripts": {
    "electron:deps": "make all",
    "electron:build": "npm run electron:deps && cross-env ELECTRON=1 node ./electron/build.js && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --x64 -mwl",
    "electron:dir": "npm run electron:deps && cross-env ELECTRON=1 node ./electron/build.js && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --x64 --dir",
    "electron:dev": "cross-env ELECTRON=1 node ./electron/dev-runner.js",
    "electron:pack": "npm run electron:main && cross-env ELECTRON=1 npm run frontend",
    "electron:main": "cross-env NODE_ENV=production webpack --progress --hide-modules --colors --config ./webpack.electron.config.js",
    "frontend": "cross-env NODE_ENV=production webpack --progress --hide-modules  --colors --config ./webpack.frontend.config.js",
    "frontend:watch": "cross-env NODE_ENV=production webpack --watch --progress --hide-modules  --colors --config ./webpack.frontend.config.js",
    "frontend:dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot --content-base dist/ --config ./webpack.frontend.config.js"
  },
  "build": {
    "productName": "MMseqs2 Search",
    "appId": "com.mmseqs.app",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*"
    ],
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "resources/icons/icon.icns"
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "icon": "resources/icons/icon.icns"
    }
  },
  "devDependencies": {
    "app-root-dir": "^1.0.2",
    "find-free-port": "^1.2.0",
    "material-design-icons": "^3.0.1",
    "vue": "^2.5.15",
    "vue-localstorage": "^0.6.1",
    "vue-resource": "^1.5.0",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.16.0",
    "vuetify": "^0.17.7",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-filehash": "^6.9.8",
    "babel-plugin-transform-imports": "^1.5.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.10",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.8.3",
    "electron-builder": "^20.5.0",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^1.1.11",
    "html-webpack-include-assets-plugin": "^1.0.4",
    "html-webpack-plugin": "^2.30.1",
    "icon-gen": "^1.2.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "style-loader": "^0.20.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "svg2png": "^4.1.1",
    "url-loader": "^0.6.2",
    "vue-loader": "^14.2.1",
    "vue-style-loader": "^4.0.2",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2",
    "webpack-hot-middleware": "^2.22.1",
    "webpack-subresource-integrity": "^1.0.4"
  }
}
